{
  "name": "@favware/showdownchecker",
  "version": "4.0.0",
  "description": "Checks the pokemon showdown repo for changes to the formats-data file",
  "author": "@favware",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favna/showdownchecker.git"
  },
  "bugs": {
    "url": "https://github.com/favna/showdownchecker/issues"
  },
  "scripts": {
    "lint": "tslint -p . -c ./tslint.json --format verbose --fix",
    "clean": "rimraf dist/",
    "prebuild": "yarn clean && yarn lint",
    "build": "tsc",
    "postbuild": "yarn terser",
    "prepublishOnly": "yarn build",
    "terser": "terser-folder ./dist -eo ./dist -x .js",
    "start": "ts-node ./src/app.ts"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@favware/querystring": "^1.0.2",
    "common-tags": "^1.8.0",
    "jsonfile": "^5.0.0",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "winston": "^3.2.1",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.0",
    "@types/jsonfile": "^5.0.0",
    "@types/node": "^12.0.8",
    "@types/node-fetch": "^2.3.6",
    "copyfiles": "^2.1.0",
    "@favware/milky-tslint": "^1.0.5",
    "@favware/tslint-config": "^1.0.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2",
    "rimraf": "^2.6.3",
    "terser-folder": "^2.0.0"
  },
  "files": [
    "dist/",
    "config/data.json"
  ],
  "directories": {
    "lib": "lib/"
  }
}
