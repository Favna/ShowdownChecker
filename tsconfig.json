{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2018"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": [
    "lib/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}